var montante
var capital
var juros
var tempo

var aporte

out("Valor inicial: ")
in(capital)

out("Aporte: ")
in(aporte)

out("Taxa de Juros: ")
in(juros)

out("Por quanto tempo: ")
in(tempo)

/*
capital = 1000
aporte = 200
juros = 0.10
tempo = 12
*/


juros = ((1+juros) ^ (1/12)) - 1
montante = capital


var i
i = 0
repeate_while(i < tempo) {
    montante = (montante + aporte) * (1 + juros)
    out(montante)
    i = i+1
}


endfile